<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketPy5.Vista.Cliente"
             NavigationPage.HasNavigationBar="True">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cliente"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.98, 190,100" AbsoluteLayout.LayoutFlags="PositionProportional">
                
                <Button Text="Salir" Command="{Binding LogOutCommand}" BackgroundColor="Green" TextColor="Black" CornerRadius="20" HorizontalOptions="CenterAndExpand" FontSize="14"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>